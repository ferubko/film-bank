<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <!--<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/movie-bank?seroDateTimeBehavior=convertToNull</property>-->
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/movie-bank</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.current_session_context_class">thread</property>
        <property name="hibernate.connection.datasource">jdbc/MovieBank</property>
        <!--<property name="hibernate.connection.password">mysql</property>-->

        <mapping class="com.movie.entity.DirectorEntity"/>
        <mapping resource="com/movie/entity/DirectorEntity.hbm.xml"/>
        <mapping class="com.movie.entity.GenreEntity"/>
        <mapping resource="com/movie/entity/GenreEntity.hbm.xml"/>
        <mapping class="com.movie.entity.MovieEntity"/>
        <mapping resource="com/movie/entity/MovieEntity.hbm.xml"/>
        <mapping class="com.movie.entity.PublisherEntity"/>
        <mapping resource="com/movie/entity/PublisherEntity.hbm.xml"/>
        <!-- <property name="connection.username"/> -->
        <!-- <property name="connection.password"/> -->

        <!-- DB schema will be updated if needed -->
        <!-- <property name="hbm2ddl.auto">update</property> -->
    </session-factory>
</hibernate-configuration>